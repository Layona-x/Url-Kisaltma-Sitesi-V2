<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>
<%- include('../partials/navbar.ejs') -%>
<form class="row" method="POST" action="/new/url">
  <div class="col-10 mt-8">
    <input class="form-control" name="url" placeholder="Url'nizi Giriniz">
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Login</button>
  </div>
  </form>
  <h1 class="text-info ml-28 mt-12">Top Click ve Linkler</h1>
  <%url.forEach(url => {%>
<table class="table table-dark table-striped ml-14 mt-4">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Url</th>
      <th scope="col">Short Url</th>
      <th scope="col">Click</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row"><% for(var i=0;i>url.lenght;i++){%> <%= i %> <%}%></th>
      <td><%= url.url %></td>
      <td><a href="<%= link %><%= url.short %>">TÄ±kla</a></td>
      <td><%= url.click %></td>
    </tr>
  </tbody>
  </table>
  <% }) %>
  </body>
  <style>
    body{
      margin:0;
      padding:0;
    }
    .form-control{ width:75% }
  </style>